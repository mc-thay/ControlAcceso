<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminInfoDocentesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información del Docente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvEstadoCivil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado Civil: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvEspecialidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidades: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvAniosExperiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Años de Experiencia: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvGradosAcademicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grados Académicos: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvIdiomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idiomas: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol: "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horarios:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            />

    </LinearLayout>
</ScrollView>
